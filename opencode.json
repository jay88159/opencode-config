{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "doc-writing": {
      "description": "文档写作编导：协调 doc-researcher、doc-writer、doc-diagrammer、doc-reviewer 四个 subagent 完成文档写作",
      "mode": "primary",
      "model": "openai/gpt-5.2",
      "prompt": "{file:./skills/doc-writing/SKILL.md}",
      "permission": {
        "edit": "deny",
        "question": "allow",
        "read": "allow"
      },
      "color": "#4CAF50"
    },
    "doc-researcher": {
      "description": "文档调研员：Web 搜索（全英文 query）、素材采集、引用整理",
      "mode": "subagent",
      "model": "deepseek/deepseek-reasoner",
      "prompt": "{file:./skills/doc-researcher/SKILL.md}",
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "read": "allow"
      }
    },
    "doc-writer": {
      "description": "文档撰稿：正文写作、占位符管理、内容融合",
      "mode": "subagent",
      "model": "deepseek/deepseek-reasoner",
      "prompt": "{file:./skills/doc-writer/SKILL.md}",
      "permission": {
        "bash": "deny",
        "read": "allow"
      }
    },
    "doc-diagrammer": {
      "description": "文档图表师：Mermaid 图表、DrawIO 图表生成",
      "mode": "subagent",
      "model": "deepseek/deepseek-reasoner",
      "prompt": "{file:./skills/doc-diagrammer/SKILL.md}",
      "permission": {
        "bash": "deny",
        "read": "allow"
      }
    },
    "doc-reviewer": {
      "description": "文档审校：质量检查、段落重写、最终润色",
      "mode": "subagent",
      "model": "deepseek/deepseek-reasoner",
      "prompt": "{file:./skills/doc-reviewer/SKILL.md}",
      "permission": {
        "bash": "deny",
        "read": "allow"
      }
    }
  },
  "provider": {
    "openai": {
      "options": {
        "websearch_cited": {
          "model": "gpt-5.2"
        }
      }
    },
    "anthropic": {
      "options": {
        "baseURL": "http://1.95.142.151:3000/v1",
        "apiKey": "sk-Zme5xnWPggIcUEJ6xskZoLDHUyxwvYnHMwFIVs1C3DlXsa4P"
      },
      "models": {
        "claude-opus-4-5-20251101": {
          "name": "Claude Opus 4.5 (20251101)"
        },
        "claude-sonnet-4-5-20250929": {
          "name": "Claude Sonnet 4.5 (20250929)"
        },
        "claude-sonnet-4-5-20250929-thinking": {
          "name": "Claude Sonnet 4.5 (20250929) Thinking"
        },
        "claude-opus-4-20250514": {
          "name": "Claude Opus 4 (20250514)"
        },
        "claude-opus-4-6": {
          "name": "Claude Opus 4.6"
        }
      }
    },
    "deepseek": {},
    "google": {
